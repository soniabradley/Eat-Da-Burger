<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-4" style='color:red'>
      <h1 style= "font-size:50px" >Mighty Burger</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">

      <img src="../assets/images/burger.png" alt="burger">
    </div>
  </div>

  <div class="row">
    <div class="col-md-offset-3 col-md-3">
    <ul class="burgerList" style="font-size : 20px;">
      {{#each burgers}} {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devour" value="true">
          <button type="submit" class="btn btn-link" style="font-size : 20px;">Devour!</button>
        </form>
{{!-- delete option --}}
{{> burgers/delete-burger}}
      </li>
      {{/unless}} {{/each}}
    </ul>
  </div>
  <div class="col-md-3">

    <ul class="burgerList" style="font-size : 20px;">
      {{#each burgers}} {{#if this.devoured}}
      <li>
        {{this.burger_name}}
{{!-- delete option --}}
{{> burgers/delete-burger}}

      </li>
      {{/if}} {{/each}}
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <form action="/" method="POST">
      <div class="form-group">
        {{!-- <label for="exampleInputEmail1">Email address</label> --}}
        <input type="text" class="form-control" name="name" id="newBurgerInput" placeholder="Enter the name of a new burger you want to eat...">
      </div>
  
      <button type="submit" class="btn btn-link" style="font-size : 20px;" >ADD</button>
    </form>
  </div>
</div>
</div>